<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifNumberActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/banner_verif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_banner"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/arrow_back_verif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/arrow_left" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:id="@+id/title_input_verif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan Kode Vertifikasi"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_input_verif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Vertifikasi Telah Terkirim Ke" />

        <TextView
            android:id="@+id/number_verif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+628xxx"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_otp_code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/input_otp_code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/input_otp_code3"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/input_otp_code4"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/input_otp_code5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/input_otp_code6"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_not_receive_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak Menerima Kode?" />

        <TextView
            android:id="@+id/resend_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="auto"
            android:text="Kirim Ulang" />

        <TextView
            android:id="@+id/edit_phone_number_verif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Edit No.Hp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>